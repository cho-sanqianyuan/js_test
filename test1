  <script src="../js/jquery-1.12.0.min.js" charset="utf-8"></script>
  <script type="text/javascript">
    (function() {
      /*    
      在注释下方写下代码
      给按钮button绑定一个点击事件
      在事件处理函数中
      获取aqi-input输入的值，并显示在aqi-display中
      */
      $("#button").click(function(){
        console.log($("body")[0].innerHTML);
        console.log($("body")[0].outerHTML);
        console.log($("body")[0].innerText);
        console.log($("body")[0].outerText);

        var text = $("#aqi-input").val();
        if( text == ""){
          alert("请输入数据!");
        }else{
          $("#aqi-display").text(text);
        }
      });

    })();
</script>
